#include <stdio.h>
#include <string.h>

int main() {
    char str[200];
    int i, words = 0;

    printf("Enter a string: ");
    fgets(str, sizeof(str), stdin);

    // Remove newline 
    str[strcspn(str, "\n")] = '\0';

    for (i = 0; str[i] != '\0'; i++) {
        if (str[i] != ' ' && (str[i+1] == ' ' || str[i+1] == '\0')) {
            words++;
        }
    }

    printf("Total number of words: %d\n", words);

    return 0;
}
