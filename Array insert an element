#include <stdio.h>

int main() {
    int a[100], n, i, pos, value;

    // Input original size
    printf("Enter number of elements: ");
    scanf("%d", &n);

    // Input elements
    printf("Enter %d elements:\n", n);
    for (i = 0; i < n; i++) {
        scanf("%d", &a[i]);
    }

    // Input position and new value
    printf("Enter position to insert (1 to %d): ", n + 1);
    scanf("%d", &pos);
    printf("Enter value to insert: ");
    scanf("%d", &value);

    // Shift elements to the right from the end
    for (i = n; i >= pos; i--) {
        a[i] = a[i - 1];
    }

    // Insert the new value
    a[pos - 1] = value;
    n++;  // Increase the size

    // Output the new array
    printf("Array after insertion:\n");
    for (i = 0; i < n; i++) {
        printf("%d ", a[i]);
    }

    return 0;
}
