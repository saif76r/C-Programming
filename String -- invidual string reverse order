#include <stdio.h>
#include <string.h>

int main() {
    char str[100];
    int i;

    printf("Enter a string: ");
    gets(str);  // âš  Use fgets() in real code, gets() is unsafe

    int len = strlen(str);

    printf("Characters in reverse order:\n");
    for (i = len - 1; i >= 0; i--) {
        printf("%c\n", str[i]);
    }

    return 0;
}
